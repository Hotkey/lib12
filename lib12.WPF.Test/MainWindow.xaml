<Window x:Class="lib12.WPF.Test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:lib12="http://schemas.kkalinowski.net/lib12"
        xmlns:views="clr-namespace:lib12.WPF.Test.Views"
        Title="lib12.WPF.Test" Height="500" Width="700">    
    
    <Grid>
        <TabControl>
            <TabItem Header="FluidTextBox">
                <views:FluidTextBoxView/>
            </TabItem>
            <TabItem Header="FluidGrid">
                <views:FluidGridView/>
            </TabItem>
            <TabItem Header="FluidPopup">
                <views:FluidPopupView/>
            </TabItem>
            <TabItem Header="ImageButton" IsSelected="True">
                <views:ImageButtonView/>
            </TabItem>
            <TabItem Header="EventToCommand">
                <views:EventToCommandView/>
            </TabItem>
            <TabItem Header="PushBinding">
                <views:PushBindingView/>
            </TabItem>
            <TabItem Header="DataBasedTemplateSelector">
                <views:DataBasedTemplateSelectorView/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
