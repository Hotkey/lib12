<UserControl x:Class="lib12.WPF.Test.Views.PushBindingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             xmlns:lib12="http://schemas.kkalinowski.net/lib12">
    
    <Grid lib12:FluidGrid.StackRows="2" lib12:FluidGrid.StackColumns="2">
        <TextBlock FontSize="40" Text="Mouse over me!" HorizontalAlignment="Center" VerticalAlignment="Center" Background="GreenYellow">
            <lib12:PushBindingManager.PushBindings>
                <lib12:PushBinding TargetProperty="IsMouseOver" Path="IsMouseOver"/>
            </lib12:PushBindingManager.PushBindings>
        </TextBlock>
        
        <TextBlock Grid.Row="1" FontSize="40" Text="Mouse is over!" HorizontalAlignment="Center" Visibility="{Binding IsMouseOver, Converter={lib12:BoolToVisibilityConverter}}"/>
        
        <ListBox Grid.Row="0" Grid.Column="1" ItemsSource="{Binding Items}" SelectionMode="Extended">
            <i:Interaction.Behaviors>
                <lib12:ListBoxSelectedItemsBinding SelectedItems="{Binding SelectedItems, Mode=OneWayToSource}"/>
            </i:Interaction.Behaviors>
        </ListBox>

        <ListBox Grid.Row="1" Grid.Column="1" ItemsSource="{Binding SelectedItems}"/>
    </Grid>
</UserControl>
