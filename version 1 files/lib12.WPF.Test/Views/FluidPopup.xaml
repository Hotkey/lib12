<UserControl x:Class="lib12.WPF.Test.Views.FluidPopupView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             xmlns:lib12="http://schemas.kkalinowski.net/lib12">
    
    <Grid>
        <TextBlock Name="tMouseOver" Text="Mouse over me!" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30"/>

        <Popup PlacementTarget="{Binding ElementName=tMouseOver}">
            <i:Interaction.Behaviors>
                <lib12:FluidPopup StaysOpenFor="50" CloseAfterClick="True"/>
            </i:Interaction.Behaviors>
            
            <Border BorderBrush="Black" Background="White" BorderThickness="1" Width="300" Height="70">
                <TextBlock Text="Popup content" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
        </Popup>
    </Grid>
</UserControl>
